@using Eterna.Models
@model Slider
@{
    ViewData["Title"] = "Create";
}


<form method="post" enctype="multipart/form-data">
    <div>
        <label class="mb-3">Slider title:</label><br />
        <input asp-for="Title" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label class="mb-3">Slider ColorText:</label><br />
        <input asp-for="ColorText" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="ColorText"></span>
    </div>
    <div>
        <label class="mb-3">Slider BigText:</label><br />
        <input asp-for="BigText" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="BigText"></span>
    </div>


    
    <div>
        <label class="mb-3">Slider image:</label><br />
        <input asp-for="Photo" class="form-control" accept="image/*" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create slider</button>
    </div>
</form>
