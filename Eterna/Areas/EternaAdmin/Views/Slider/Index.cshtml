@using Eterna.Models
@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive pt-3">
    <a asp-controller="Slider" asp-action="Create" style="color:white;font-size:20px" class="mb-3 btn btn-success">Create slider</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                   ColorText
                </th>
                <th>
                   BigText
                </th>
                <th>
                    
                </th>
                <th>
                    Title
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (Slider slider in Model)
            {
                <tr>
                    <td>
                        <img style="width: 150px; height:90px" src="~/assets/image/@slider.Image" />
                    </td>
                    <td>
                        @slider.ColorText
                    </td>
                    <td>
                        @if (slider.BigText.Length >= 30)
                        {
                            @(slider.BigText.Substring(0, 30).ToString() + "...") 
                                }
                        else
                        {
                            @slider.BigText
                        }
                    </td>
                    <td>
                        @slider.Title
                    </td>
                    <td>
                        <div class="d-flex">
                            <div class="detail">
                                <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                            </div>
                            <div class="edit">
                                <a asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-warning">
                                 <i class="fa-solid fa-square-pen"></i>
                                </a>
                            </div>
                            <div class="delete">
                                <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger"> <i class="fa-solid fa-circle-minus"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>